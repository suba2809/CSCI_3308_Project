<div style="max-width: 700px; margin: 2rem auto; padding: 2rem; background: #e4e2e0; border-radius: 10px;">
  <h2>{{article.title}}</h2>
  <p><strong>By:</strong> {{article.author}}</p>
  <p><strong>Posted:</strong> {{article.date}}</p>
  <hr />
  <p>{{article.summary}}</p>

  {{#if article.file_path}}
    <p><a href="/{{article.file_path}}" target="_blank">📎 Download Attachment</a></p>
  {{/if}}

  <p><a href="/home">← Back to Home</a></p>

  <!-- LIKE FORM -->
  <form action="/like/{{article.article_id}}" method="POST" style="margin-bottom: 1rem;">
    <button type="submit">{{#if userHasLiked}}💔 Unlike{{else}}❤️ Like{{/if}}</button>
    <span>{{article.likes}} likes</span>
  </form>



  <!-- COMMENT FORM -->
  <form action="/comment/{{article.article_id}}" method="POST" style="margin-top: 2rem;">
    <textarea name="content" placeholder="Write a comment..." required style="width: 100%; height: 60px; padding: 8px;"></textarea>
    <button type="submit" style="margin-top: 0.5rem;">Post</button>
  </form>

  <!-- COMMENT LIST -->
  <ul style="margin-top: 1rem; list-style: none; padding: 0;">
    {{#each comments}}
      <li style="margin-bottom: 0.5rem;"><strong>{{this.username}}</strong>: {{this.content}}</li>
    {{/each}}
  </ul>
</div>
