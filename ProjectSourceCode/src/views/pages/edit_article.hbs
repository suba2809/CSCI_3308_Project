{{!-- views/pages/edit_article.hbs --}}
<div style="max-width: 600px; margin: 50px auto; padding: 30px; background-color: #0f0f0f; border-radius: 10px">
  <h2 style="text-align: center; color: #0f0f0f;">Edit Article</h2>
  <form action="/edit_article/{{article.article_id}}" method="POST" enctype="multipart/form-data" style="display: flex; flex-direction: column; gap: 16px;">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="{{article.title}}" required style="width: 100%;">
    </div>

    <div>
      <label for="summary">Summary</label>
      <textarea id="summary" name="summary" rows="6" style="width: 100%;" required>{{article.summary}}</textarea>
    </div>

    {{#if article.file_path}}
    <p>Current file: <a href="/{{article.file_path}}" target="_blank">Download</a></p>
    {{/if}}

    <div>
      <label for="article_file">Upload New File (optional)</label>
      <input type="file" id="article_file" name="article_file" accept=".pdf,.doc,.docx,.txt">
    </div>

    <button type="submit" style="background-color: #0f0f0f; color: white; padding: 10px;">Update Article</button>
  </form>
</div>

{{#if error}}
  <p style="color: red; text-align: center; margin-top: 10px;">{{error}}</p>
{{/if}}
{{#if success}}
  <p style="color: green; text-align: center; margin-top: 10px;">{{success}}</p>
{{/if}}
