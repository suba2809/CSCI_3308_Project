<div style="max-width: 500px; margin: 50px auto; padding: 30px; background-color: white; border-radius: 10px; font-family: sans-serif; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
  <h2 style="text-align: center; color: #0f0f0f;">Register</h2>

  <!-- Registration Form -->
  <form action="/register" method="POST" style="display: flex; flex-direction: column; gap: 12px;">
    <input type="text" name="first_name" placeholder="First Name" required>
    <input type="text" name="last_name" placeholder="Last Name" required>
    <input type="email" name="email" placeholder="Email" required>
    <input type="text" name="bio" placeholder="Bio">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>
    <button type="submit" style="background-color: #0f0f0f; color: white; padding: 10px; border: none; border-radius: 5px;">
      Register
    </button>
      <div class="login-footer" style="text-align: center;">Already have an account? <a href="/login">Login</a></div>


  </form>

  <!-- Error Message -->
  {{#if error}}
    <p style="color: red; text-align: center; margin-top: 10px;">{{error}}</p>
  {{/if}}
  
  <!-- Success Message -->
  {{#if success}}
    <p style="color: green; text-align: center; margin-top: 10px;">{{success}}</p>
  {{/if}}
</div>
